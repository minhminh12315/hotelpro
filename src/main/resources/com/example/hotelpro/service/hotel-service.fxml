<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="650.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.manager.service.ServicePageController">

    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
        <children>
            <Text text="Services Page" style="-fx-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </children>
    </HBox>

    <SplitPane dividerPositions="0.7">
        <items>

            <!-- Service List (Dynamic) -->
            <ScrollPane fitToWidth="true">
                <content>
                    <VBox fx:id="serviceListVBox" spacing="10" style="-fx-padding: 20;"/>
                </content>
            </ScrollPane>

            <!-- Cart Panel -->
            <VBox prefWidth="400.0" style="-fx-background-color: #F5F5F5; -fx-padding: 15;">
                <children>
                    <Label text="Cart" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                    <ScrollPane fitToWidth="true">
                        <content>
                            <TableView fx:id="cartTable">
                                <columns>
                                    <TableColumn fx:id="colService" text="Service" prefWidth="150"/>
                                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                                    <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
                                    <TableColumn fx:id="colTotalPrice" text="Total Price" prefWidth="100"/>
                                    <TableColumn fx:id="colAction" text="Actions" prefWidth="100"/>
                                </columns>
                            </TableView>
                        </content>
                    </ScrollPane>
                    <VBox spacing="10">
                        <Label text="Total:"/>
                        <Label fx:id="totalPrice" text="0.0 VND"/>
                        <Separator/>
                        <Button text="Check out" style="-fx-background-color: yellow; -fx-font-size: 16px;"/>
                    </VBox>
                </children>
            </VBox>

        </items>
    </SplitPane>
</VBox>
