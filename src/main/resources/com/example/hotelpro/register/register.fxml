<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RegisterController">
    <Label text="Register" style="-fx-font-size: 20;"/>
    <TextField fx:id="fullnameField" promptText="Fullname"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    <Button text="Register" onAction="#handleRegister"/>
    <Hyperlink text="Back to Login" onAction="#openLoginPage"/>
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>