    <Label text="Register to HotelPro" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TextField fx:id="fullnameField" promptText="Fullname"
               style="-fx-pref-width: 200px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #b0b0b0; -fx-border-radius: 8px; -fx-padding: 6px;" />

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-pref-width: 200px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #b0b0b0; -fx-border-radius: 8px; -fx-padding: 6px;" />

    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-pref-width: 200px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #b0b0b0; -fx-border-radius: 8px; -fx-padding: 6px;" />

    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                   style="-fx-pref-width: 200px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #b0b0b0; -fx-border-radius: 8px; -fx-padding: 6px;" />

    <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-opacity: 0;" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Register" onAction="#handleRegister"
                style="-fx-font-size: 14px; -fx-pref-width: 100px; -fx-pref-height: 35px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8px; -fx-font-weight: bold;" />

        <Hyperlink text="Back to Login" onAction="#openLoginPage"
                   style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-cursor: hand;" />
    </HBox>

</VBox>
